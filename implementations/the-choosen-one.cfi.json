{
  "implements": "templates/spa.the-choosen-one.cft.json#1.0.0",
  "name": "the-choosen-one",
  "version": "1.0.0",
  "app.framework": "react",
  "build.strategy": "react_vite",
  "deploy.strategy": "github_actions_pages",
  "ui.theme": "the_choosen_one",
  "ui.buttons.layout": "primary_secondary_inline",
  "ui.footer.attribution": "project_by_preetam",
  "runtime.commands": {
    "install": "cd site/coframe && pnpm i",
    "build": "cd site/coframe && pnpm build",
    "dev": "cd site/coframe && pnpm dev",
    "test": "cd site/coframe && pnpm test",
    "lint": "cd site/coframe && pnpm lint"
  },
  "artifact.patterns": ["site/coframe/dist/**"],
  "params": {
    "op.deploy.gha.pages": {
      "working_dir": "site/coframe",
      "artifact_path": "site/coframe/dist",
      "node_version": "20"
    }
  },
  "provenance": {
    "source": "Mr-Ahuja/Horus and Smart-URL-Chrome-Extention (design/build parity)",
    "version": "1.0.0",
    "date": "2025-10-25",
    "note": "Shared SPA look & feel; CLI deploy to GitHub Pages."
  },
  "why": "Unify design language and deployment flow across similar SPAs using Vite build and Git CLI Pages publishing."
}
